<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resturant__detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:orientation="vertical"
    android:background="#ffffff"
    android:gravity="center"
    tools:context="loginpage.pradeep.loginpage.Resturant_Detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:gravity="right"
        android:layout_weight="0.1"
        android:layout_marginBottom="1px"
        android:orientation="vertical"
        android:background="@drawable/bannerfinal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f4f5"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/Text"
            android:text="HotelName"


            android:textAlignment="center"
            android:id="@+id/Hname"/>

        <ImageView
            android:layout_width="8sp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:id="@+id/fav"
            android:layout_weight="1"
            android:background="#f7f4f5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="8sp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:id="@+id/map_pointer"
            android:layout_weight="1"
            android:src="@drawable/map_pointer"
            android:onClick="googleMaps"/>

        <TextView
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@color/Text"
            android:id="@+id/Address"
            android:layout_weight="0.15"
            android:onClick="googleMaps"/>




    </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.6"
        android:orientation="vertical"

        >
        <ListView
            android:id="@+id/menu_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textColor = "@color/Text"


            android:background="@drawable/listview"
            >
        </ListView>


    </LinearLayout>




</LinearLayout>
