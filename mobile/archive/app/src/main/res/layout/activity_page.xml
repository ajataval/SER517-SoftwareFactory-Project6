<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:background="@drawable/food1"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="loginpage.pradeep.loginpage.ActivityPage"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124px"
        android:gravity="center"
        android:layout_weight="0.1"
        android:layout_marginBottom="1px"
        android:orientation="vertical"
        android:background="@drawable/banner"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124px"
        android:gravity="center"
        android:layout_weight="0.1"
        android:background="#CCFFFFFF"
        android:layout_marginBottom="1px"
        android:orientation="horizontal"
        >

        <Spinner android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:id="@+id/spin"
            android:entries="@array/drop_down"
            android:layout_weight="0.47">

        </Spinner>

        <EditText android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/search_bar"
            android:layout_weight="1"
            android:ems="4"
            android:background="@null"
            />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="30dp"
            android:src="@drawable/plate"
            android:layout_weight="0.14"
            android:onClick="searchCuisineDish"
            />

    </LinearLayout>






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"
        android:orientation="vertical">
        <ListView
            android:id="@+id/resturant_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f4f5">
        </ListView>

    </LinearLayout>

</LinearLayout>
