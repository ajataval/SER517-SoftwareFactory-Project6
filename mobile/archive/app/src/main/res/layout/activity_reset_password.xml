<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reset_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#f9f9f7"
    tools:context="loginpage.pradeep.loginpage.ResetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124px"
        android:gravity="center"
        android:layout_weight="0.1"
        android:layout_marginBottom="1px"
        android:orientation="vertical"
        android:background="@drawable/bannerfinal"

        />


    <EditText

        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="4dp"
        android:textColor="@color/Text"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:background="@drawable/border"
        android:layout_width="280dp"
        android:layout_height="28dp"
        android:layout_marginTop="97dp"
        android:id="@+id/resestPassword"
        android:hint="New Password" />

    <EditText
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:background="@drawable/border"
        android:layout_width="280dp"
        android:layout_height="28dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/resestPassword"
        android:layout_alignRight="@+id/resestPassword"
        android:layout_alignEnd="@+id/resestPassword"
        android:layout_marginTop="22dp"
        android:id="@+id/confrimResetPassword"
        android:hint="Confirm Password" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confrimResetPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:id="@+id/reset" />
</RelativeLayout>
